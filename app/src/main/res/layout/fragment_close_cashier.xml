    <RelativeLayout
        android:id="@+id/btn_cashAndAmountF_submit"
        android:layout_width="90dp"
        android:layout_height="@dimen/height_for_right_layout_personal"
        android:layout_marginStart="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_normal_btn"
        app:layout_constraintBottom_toBottomOf="@+id/relativeLayout_cashAndAmountF_receive"
        app:layout_constraintEnd_toStartOf="@+id/spinner_cashAndAmountF_read_cart"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_7sdp"
            app:srcCompat="@drawable/ic_plus" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_7sdp"
            android:fontFamily="@font/iransanse_medium"
            android:text="ثبت"
            android:textColor="@color/white"
            android:textSize="10sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout_cashAndAmountF_description"
        android:layout_width="0dp"
        android:layout_height="@dimen/container_userAccountF_height"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/bg_normal_edt"
        app:layout_constraintEnd_toEndOf="@id/relativeLayout_cashAndAmountF_receive"
        app:layout_constraintStart_toStartOf="@id/btn_cashAndAmountF_submit"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout_cashAndAmountF_receive">


        <EditText
            android:id="@+id/edit_cashAndAmountF_description"
            android:layout_width="match_parent"
            android:layout_height="@dimen/container_userAccountF_height"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginEnd="20dp"
            android:background="@null"
            android:fontFamily="@font/iransanse_medium"
            android:gravity="center_vertical"
            android:hint="توضیحات"
            android:maxLength="10"
            android:maxLines="1"
            android:paddingEnd="@dimen/_5sdp"
            android:textDirection="rtl"
            android:textSize="10sp" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:background="@drawable/bg_recyclerview_cash_and_amounts"
        app:layout_constraintBottom_toTopOf="@+id/btn_cashAndAmountF_Cancel"
        app:layout_constraintEnd_toEndOf="@+id/relativeLayout_cashAndAmountF_description"
        app:layout_constraintStart_toStartOf="@+id/relativeLayout_cashAndAmountF_description"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout_cashAndAmountF_description">

        <LinearLayout
            android:id="@+id/linearLayout_cashAndAmountF_containet"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:orientation="horizontal"
            android:weightSum="4.5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/iran_sans_mobile"
                android:gravity="center"
                android:text="توضیحات"
                android:textColor="@color/black_text"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/iran_sans_mobile"
                android:gravity="center"
                android:text="نام کارتخوان"
                android:textColor="@color/black_text"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/iran_sans_mobile"
                android:gravity="center"
                android:text="نوع"
                android:textColor="@color/black_text"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/iran_sans_mobile"
                android:gravity="center"
                android:text="مبلغ"
                android:textColor="@color/black_text"
                android:textSize="12sp"/>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_close_cashier"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/linearLayout_cashAndAmountF_containet"
            android:padding="3dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_cash_and_other_amounts" />

    </RelativeLayout>


    <Button
        android:id="@+id/btn_cashAndAmountF_close_cach"
        android:layout_width="90dp"
        android:layout_height="@dimen/height_for_right_layout_personal"
        android:layout_marginBottom="@dimen/_16sdp"
        android:background="@drawable/bg_normal_btn"
        android:fontFamily="@font/iransanse_medium"
        android:text="بستن صندوق"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/relativeLayout" />

    <Button
        android:id="@+id/btn_cashAndAmountF_Cancel"
        android:layout_width="90dp"
        android:layout_height="@dimen/height_for_right_layout_personal"
        android:layout_marginLeft="@dimen/_14sdp"
        android:background="@drawable/bg_normal_edt"
        android:fontFamily="@font/iransanse_medium"
        android:text="انصراف"
        android:textColor="@color/black_text"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_cashAndAmountF_close_cach"
        app:layout_constraintStart_toEndOf="@+id/btn_cashAndAmountF_close_cach"
        app:layout_constraintTop_toTopOf="@+id/btn_cashAndAmountF_close_cach" />

    <FrameLayout
        android:id="@+id/loading"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>