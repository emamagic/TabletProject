<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/box_background">


    <ImageView
        android:id="@+id/img_cashAndAmountF_one"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_margin="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_triangle" />

    <TextView
        android:id="@+id/txt_cashAndAmountF_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_7sdp"
        android:fontFamily="@font/iransanse_medium"
        android:text="@string/txt_cards"
        android:textColor="@color/black_text"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_cashAndAmountF_one"
        app:layout_constraintEnd_toStartOf="@+id/img_cashAndAmountF_one"
        app:layout_constraintTop_toTopOf="@+id/img_cashAndAmountF_one" />


    <TextView
        android:id="@+id/txt_cashAndAmountF_deliveredd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/iransanse_medium"
        android:text="تحویل گرفته شد"
        android:textColor="@color/black_text"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/img_cashAndAmountF_one"
        app:layout_constraintTop_toBottomOf="@+id/txt_cashAndAmountF_title" />


    <RelativeLayout
        android:id="@+id/relativeLayout_cashAndAmountF_delivered"
        android:layout_width="120dp"
        android:layout_height="@dimen/height_for_right_layout_personal"
        android:layout_marginEnd="30dp"
        android:background="@drawable/bg_normal_edt"
        app:layout_constraintBottom_toBottomOf="@+id/txt_cashAndAmountF_deliveredd"
        app:layout_constraintEnd_toStartOf="@+id/txt_cashAndAmountF_deliveredd"
        app:layout_constraintTop_toTopOf="@+id/txt_cashAndAmountF_deliveredd">


        <EditText
            android:id="@+id/edit_cashAndAmountF_delivered"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@id/txt_cashAndAmountF_delivered"
            android:background="@null"
            android:fontFamily="@font/iransanse_medium"
            android:gravity="center_vertical"
            android:hint="تعداد"
            android:inputType="number"
            android:maxLength="30"
            android:maxLines="1"
            android:paddingEnd="@dimen/_5sdp"
            android:textDirection="rtl"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/txt_cashAndAmountF_delivered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/iransanse_medium"
            android:text="عدد"
            android:textSize="10sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_cashAndAmountF_take_deliveredd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/iransanse_medium"
        android:text="تحویل داده شد"
        android:textColor="@color/black_text"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/relativeLayout_cashAndAmountF_delivered"
        app:layout_constraintEnd_toStartOf="@+id/relativeLayout_cashAndAmountF_delivered"
        app:layout_constraintTop_toTopOf="@+id/relativeLayout_cashAndAmountF_delivered" />

    <RelativeLayout
        android:id="@+id/relativeLayout_cashAndAmountF_take_delivered"
        android:layout_width="120dp"
        android:layout_height="@dimen/height_for_right_layout_personal"
        android:layout_marginEnd="30dp"
        android:background="@drawable/bg_normal_edt"
        app:layout_constraintBottom_toBottomOf="@+id/txt_cashAndAmountF_take_deliveredd"
        app:layout_constraintEnd_toStartOf="@+id/txt_cashAndAmountF_take_deliveredd"
        app:layout_constraintTop_toTopOf="@+id/txt_cashAndAmountF_take_deliveredd">


        <EditText
            android:id="@+id/edit_cashAndAmountF_taken"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@id/txt_cashAndAmountF_take_delivered"
            android:background="@null"
            android:fontFamily="@font/iransanse_medium"
            android:gravity="center_vertical"
            android:hint="تعداد"
            android:inputType="number"
            android:maxLength="30"
            android:maxLines="1"
            android:paddingEnd="@dimen/_5sdp"
            android:textDirection="rtl"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/txt_cashAndAmountF_take_delivered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/iransanse_medium"
            android:paddingLeft="12dp"
            android:text="عدد"
            android:textSize="10sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_cashAndAmountF_two"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginTop="@dimen/_15sdp"
        android:src="@drawable/ic_triangle"
        app:layout_constraintEnd_toEndOf="@+id/img_cashAndAmountF_one"
        app:layout_constraintTop_toBottomOf="@id/txt_cashAndAmountF_deliveredd" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_7sdp"
        android:text="مبالغ دریافتی"
        android:textColor="@color/black_text"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_cashAndAmountF_two"
        app:layout_constraintEnd_toStartOf="@+id/img_cashAndAmountF_two"
        app:layout_constraintTop_toTopOf="@+id/img_cashAndAmountF_two" />

    <RelativeLayout
        android:id="@+id/relativeLayout_cashAndAmountF_receive"
        android:layout_width="130dp"
        android:layout_height="@dimen/height_for_right_layout_personal"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/bg_normal_edt"
        app:layout_constraintEnd_toEndOf="@+id/img_cashAndAmountF_two"
        app:layout_constraintStart_toEndOf="@+id/spinner_cashAndAmountF_cost"
        app:layout_constraintTop_toBottomOf="@+id/textView2">


        <EditText
            android:id="@+id/edit_cashAndAmountF_receive"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginEnd="20dp"
            android:background="@null"
            android:fontFamily="@font/iransanse_medium"
            android:gravity="center_vertical"
            android:hint="مبلغ"
            android:inputType="number"
            android:maxLength="30"
            android:maxLines="1"
            android:paddingEnd="@dimen/_5sdp"
            android:textDirection="rtl"
            android:textSize="8sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/spinner_cashAndAmountF_cost"
        android:layout_width="140dp"
        android:layout_height="27dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_normal_edt"
        app:layout_constraintBottom_toBottomOf="@+id/relativeLayout_cashAndAmountF_receive"
        app:layout_constraintEnd_toStartOf="@+id/relativeLayout_cashAndAmountF_receive"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/spinner_cashAndAmountF_read_cart"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <Spinner
            android:id="@+id/spinner1_close_cach"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:gravity="right"
            android:background="@android:color/transparent"
            android:spinnerMode="dropdown" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            app:srcCompat="@drawable/ic_arrow_down_sign_to_navigate"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/spinner_cashAndAmountF_read_cart"
        android:layout_width="140dp"
        android:layout_height="27dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_normal_edt"
        app:layout_constraintBottom_toBottomOf="@+id/relativeLayout_cashAndAmountF_receive"
        app:layout_constraintEnd_toStartOf="@+id/spinner_cashAndAmountF_cost"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_cashAndAmountF_submit"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <Spinner
            android:id="@+id/spinner2_close_cach"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:gravity="right"
            android:background="@android:color/transparent"
            android:spinnerMode="dropdown" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginStart="12dp"
            app:srcCompat="@drawable/ic_arrow_down_sign_to_navigate" />


    </RelativeLayout>

    <!--    <Spinner-->
    <!--        android:id="@+id/spinner_cashAndAmountF_cost"-->
    <!--        android:layout_width="110dp"-->
    <!--        android:layout_height="@dimen/height_for_right_layout_personal"-->
