<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/box_background"
    android:layout_gravity="center"
    android:padding="24dp">

    <Button
        android:id="@+id/btn_recode_relationshipsF_pay"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:background="@drawable/bg_normal_btn"
        android:fontFamily="@font/iran_sans_mobile"
        android:text="@string/txt_submit"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="12dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout7"
        app:layout_constraintStart_toStartOf="@+id/relativeLayout7"
        tools:layout_editor_absoluteY="226dp" />

    <Button
        android:id="@+id/btn_recode_relationshipsF_Cancel"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:background="@drawable/bg_border_container"
        android:fontFamily="@font/iran_sans_mobile"
        android:text="@string/txt_cancel"
        android:layout_marginBottom="3dp"
        android:textSize="12dp"
        android:gravity="center"
        android:textColor="@color/text_gray"
        app:layout_constraintBottom_toBottomOf="@+id/btn_recode_relationshipsF_pay"
        app:layout_constraintStart_toEndOf="@+id/btn_recode_relationshipsF_pay"
        app:layout_constraintTop_toTopOf="@+id/btn_recode_relationshipsF_pay" />

    <RelativeLayout
        android:id="@+id/relativeLayout7"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_weight=".28"
        android:background="@drawable/bg_normal_edt"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:background="@android:color/transparent"
            android:spinnerMode="dropdown" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginStart="24dp"
            app:srcCompat="@drawable/ic_arrow_down" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout_recode_relationshipsF_receive"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:background="@drawable/bg_border_container"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintLeft_toLeftOf="@+id/relativeLayout7"
        tools:layout_editor_absoluteX="33dp">

        <ImageView
            android:id="@+id/img_record_relationF_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/ic_search" />


        <TextView
            android:id="@+id/edit_record_relationF_receive"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_toStartOf="@id/img_record_relationF_receive"
            android:fontFamily="@font/iransanse_medium"
            android:gravity="center_vertical"
            android:textDirection="rtl"
            android:hint="@string/txt_search"
            android:textColor="@color/black"
            android:layout_marginRight="6dp"
            android:textSize="10dp" />


    </RelativeLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_5sdp"
        android:fontFamily="@font/iran_sans_mobile"
        tools:text="پوریا محمدی زاده"
        android:textColor="@color/black"
        android:textSize="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="@+id/check_recode_relationshipsF_checked"
        app:layout_constraintEnd_toStartOf="@+id/check_recode_relationshipsF_checked"
        app:layout_constraintTop_toTopOf="@+id/check_recode_relationshipsF_checked" />


    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/check_recode_relationshipsF_checked"
        android:layout_width="24dp"
        android:layout_height="40dp"
        android:layout_marginBottom="24dp"
        android:checked="false"
        android:scaleX="0.50"
        android:scaleY="0.50"
        app:layout_constraintEnd_toEndOf="@+id/relativeLayout7"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout7"/>


    <ImageView
        android:id="@+id/img_recode_relationshipsF_imgTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginRight="6dp"
        app:layout_constraintBottom_toTopOf="@+id/check_recode_relationshipsF_checked"
        app:layout_constraintEnd_toEndOf="@+id/check_recode_relationshipsF_checked"
        app:srcCompat="@drawable/ic_triangle" />

    <TextView
        android:id="@+id/txt_recode_relationshipsF_txtTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_4sdp"
        android:fontFamily="@font/iran_sans_mobile"
        android:text="ثبت رابطه ها"
        android:textColor="@color/black"
        android:textSize="@dimen/_5sdp"
        app:layout_constraintEnd_toStartOf="@+id/img_recode_relationshipsF_imgTop"
        app:layout_constraintTop_toTopOf="@+id/img_recode_relationshipsF_imgTop" />


</androidx.constraintlayout.widget.ConstraintLayout>