<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_20sdp"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="4.5"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:weightSum="2"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_item_close_cash_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_delete"/>
        <ImageView
            android:id="@+id/img_item_close_cash_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_edit"/>

    </LinearLayout>


    <TextView
        android:id="@+id/txt_item_close_cash_description"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fontFamily="@font/iran_sans_mobile"
        android:gravity="center"
        tools:text="توضیحات"
        android:textSize="8sp"
        android:textColor="@color/black_text" />

    <TextView
        android:id="@+id/txt_item_close_cash_cart_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fontFamily="@font/iran_sans_mobile"
        android:gravity="center"
        android:textSize="8sp"
        tools:text="کارتخوان سامان کیش"
        android:textColor="@color/black_text" />

    <TextView
        android:id="@+id/txt_item_close_cash_cart_type"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="8sp"
        android:fontFamily="@font/iran_sans_mobile"
        android:gravity="center"
        tools:text="کارتخوان"
        android:textColor="@color/black_text"/>

    <TextView
        android:id="@+id/txt_item_close_cash_price"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="8sp"
        android:fontFamily="@font/iran_sans_mobile"
        android:gravity="center"
        tools:text="  850,000 ریال"
        android:textColor="#686868"/>
</LinearLayout>