<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/last_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/iran_sans_mobile"
        tools:text="آقای حسنلو"
        android:textColor="@color/green_text"
        android:textSize="8sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="12dp"/>


    <ImageView
        android:id="@+id/img_message_box_last"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:src="@drawable/ic_triangle"
        android:layout_margin="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/last_sender"/>


    <TextView
        android:id="@+id/last_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="فرایند خدمات آموزش اصحاب وقف و بقاع متبرکه فرایند خدمات آموزش فرایند خدمات آموزش اصحاب وقف و بقاع متبرکه فرایند خدمات آموزش"
        android:textSize="8sp"
        android:fontFamily="@font/iran_sans_mobile"
        android:textColor="@color/black_text"
        android:gravity="center_vertical"
        android:padding="6dp"
        app:layout_constraintRight_toLeftOf="@+id/img_message_box_last"
        app:layout_constraintTop_toTopOf="@+id/img_message_box_last"
        app:layout_constraintBottom_toBottomOf="@+id/img_message_box_last" />


    <TextView
        android:id="@+id/last_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1399/07/12"
        android:textSize="8sp"
        android:fontFamily="@font/iran_sans_mobile"
        android:drawableStart="@drawable/ic_hour"
        android:drawablePadding="6dp"
        android:padding="3dp"
        android:background="@drawable/background_text"
        app:layout_constraintTop_toTopOf="@+id/last_message"
        app:layout_constraintBottom_toBottomOf="@+id/last_message"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>