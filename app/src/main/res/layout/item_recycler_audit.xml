<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:background="@drawable/bg_audit"
    android:layoutDirection="rtl">

    <TextView
        android:id="@+id/txt_item_audit_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="تاریخ"
        android:gravity="center"
        android:fontFamily="@font/iran_sans_mobile"
        android:textSize="8sp"
        android:textColor="@color/text"/>

    <TextView
        android:id="@+id/txt_item_audit_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="نام"
        android:gravity="center"
        android:fontFamily="@font/iran_sans_mobile"
        android:textSize="8sp"
        android:textColor="@color/text"/>

    <TextView
        android:id="@+id/txt_item_audit_payment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="پرداختی"
        android:fontFamily="@font/iran_sans_mobile"
        android:textSize="8sp"
        android:textColor="@color/text"/>
    <TextView
        android:id="@+id/txt_item_audit_discount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="تخفیف"
        android:fontFamily="@font/iran_sans_mobile"
        android:textSize="8sp"
        android:textColor="@color/text"/>
    <TextView
        android:id="@+id/txt_item_audit_cart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="کارتخوان"
        android:fontFamily="@font/iran_sans_mobile"
        android:textSize="8sp"
        android:textColor="@color/text"/>
    <TextView
        android:id="@+id/txt_item_audit_cache"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="نقدی"
        android:fontFamily="@font/iran_sans_mobile"
        android:textSize="8sp"
        android:textColor="@color/text"/>
    <TextView
        android:id="@+id/txt_item_audit_bon"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="بن"
        android:fontFamily="@font/iran_sans_mobile"
        android:textSize="8sp"
        android:textColor="@color/text"/>

    <TextView
        android:id="@+id/txt_item_audit_reward"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="پاداش"
        android:fontFamily="@font/iran_sans_mobile"
        android:textSize="8sp"
        android:textColor="@color/text"/>

    <TextView
        android:id="@+id/txt_item_audit_bracelet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="دستبند"
        android:fontFamily="@font/iran_sans_mobile"
        android:textSize="8sp"
        android:textColor="@color/text"/>


</LinearLayout>