<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_item_search"
    android:background="@drawable/bg_search_item"
    android:padding="6dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_item_search"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/ic_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/txt_item_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="پوریا محمدی"
        android:fontFamily="@font/iran_sans_mobile"
        android:textSize="8sp"
        android:textColor="@color/text"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toLeftOf="@id/image_item_search"
        app:layout_constraintTop_toTopOf="@id/image_item_search"
        app:layout_constraintBottom_toBottomOf="@id/image_item_search" />

    <ImageView
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:src="@drawable/ic_time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_item_search"
        app:layout_constraintBottom_toBottomOf="@id/image_item_search" />




</androidx.constraintlayout.widget.ConstraintLayout>