<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_border_profile_menu"
    android:orientation="vertical"
    android:gravity="right"
    android:padding="@dimen/_6sdp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_menu_dialog_profile"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/ic_avatar" />

        <TextView
            android:id="@+id/txt_menu_dialog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="@font/iran_sans_mobile"
            android:layout_toLeftOf="@+id/img_menu_dialog_profile"
            android:layout_alignTop="@+id/img_menu_dialog_profile"
            tools:text="پوریا احمدی"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/txt_menu_dialog_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="مشاهده حساب کاربری"
            android:layout_toLeftOf="@+id/img_menu_dialog_profile"
            android:layout_alignBottom="@+id/img_menu_dialog_profile"
            android:textSize="8sp"
            android:drawablePadding="12dp"
            android:textColor="@color/green_text"
            app:drawableStartCompat="@drawable/ic_arrow_left" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_menu_dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/iran_sans_mobile"
        android:text="پیغام ها"
        android:drawablePadding="20dp"
        android:padding="8dp"
        android:textSize="10sp"
        android:drawableEnd="@drawable/ic_mail"/>


    <TextView
        android:id="@+id/txt_menu_dialog_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:fontFamily="@font/iran_sans_mobile"
        android:text="خروج"
        android:padding="8dp"
        android:drawablePadding="20dp"
        android:textSize="10sp"
        android:drawableEnd="@drawable/ic_exit" />


</LinearLayout>